# ==================================
# DYGSOM Fraud Dashboard - Environment Variables
# ==================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ----------------------------------
# Application
# ----------------------------------
NEXT_PUBLIC_APP_NAME=DYGSOM Fraud Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ----------------------------------
# API Backend
# ----------------------------------
# URL del backend FastAPI (sin trailing slash)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_TIMEOUT=30000

# ----------------------------------
# Authentication
# ----------------------------------
# JWT token storage key (used in localStorage)
NEXT_PUBLIC_TOKEN_STORAGE_KEY=dygsom_auth_token
# Token expiration time in hours
NEXT_PUBLIC_TOKEN_EXPIRY_HOURS=24

# ----------------------------------
# Feature Flags
# ----------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_LOGGING=true

# ----------------------------------
# Logging
# ----------------------------------
# Log level: debug | info | warn | error
NEXT_PUBLIC_LOG_LEVEL=info
# Enable console logs in development
NEXT_PUBLIC_LOG_TO_CONSOLE=true

# ----------------------------------
# Security
# ----------------------------------
# CSRF token header name
NEXT_PUBLIC_CSRF_HEADER=X-CSRF-Token
# API key header name (for future use)
NEXT_PUBLIC_API_KEY_HEADER=X-API-Key

# ----------------------------------
# UI Configuration
# ----------------------------------
# Items per page in tables
NEXT_PUBLIC_ITEMS_PER_PAGE=20
# Chart refresh interval in seconds
NEXT_PUBLIC_CHART_REFRESH_INTERVAL=30

# ----------------------------------
# Development Only
# ----------------------------------
# Enable React Query DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
