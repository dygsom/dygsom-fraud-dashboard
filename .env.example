# ==================================
# DYGSOM Fraud Dashboard - Environment Variables
# ==================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ----------------------------------
# Application
# ----------------------------------
NEXT_PUBLIC_APP_NAME=DYGSOM Fraud Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ----------------------------------
# API Backend (DYGSOM Fraud Detection)
# ----------------------------------
# URL del backend (sin trailing slash, sin /v1)
# Development: http://localhost:3000/v1
# Production: https://api.dygsom.pe/v1
NEXT_PUBLIC_API_URL=http://localhost:3000/v1

# ----------------------------------
# Feature Flags
# ----------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_API_KEY_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_PILLAR_CONFIG=true
# ----------------------------------
# UI Configuration
# ----------------------------------
# Items per page in tables
NEXT_PUBLIC_ITEMS_PER_PAGE=20
# Chart refresh interval in seconds
NEXT_PUBLIC_CHART_REFRESH_INTERVAL=30

# ----------------------------------
# Data Mode Configuration (Hybrid System)
# ----------------------------------
# Usuario especial que usa datos mockup para testing
NEXT_PUBLIC_TEST_USER_EMAIL=usuario1@dygsom.pe
NEXT_PUBLIC_TEST_USER_PASSWORD=SecurePASS123

# ----------------------------------
# Development Only
# ----------------------------------
# Enable React Query DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
