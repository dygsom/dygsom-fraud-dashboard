# ==================================
# DYGSOM Fraud Dashboard - Production Environment
# ==================================
# AWS Amplify Production Build Configuration
# Region: sa-east-1 (SÃ£o Paulo, Brasil)

# ----------------------------------
# Application
# ----------------------------------
NEXT_PUBLIC_APP_NAME=DYGSOM Fraud Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# ----------------------------------
# API Backend (DYGSOM Fraud Detection)
# ----------------------------------
# Production API URL (configurado en Amplify Console)
# URL del backend desplegado en Lambda + API Gateway sa-east-1
# Formato: https://api.dygsom.pe/v1 (sin trailing slash)
NEXT_PUBLIC_API_URL=https://api.dygsom.pe/v1

# ----------------------------------
# Feature Flags
# ----------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_API_KEY_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_PILLAR_CONFIG=true

# ----------------------------------
# UI Configuration
# ----------------------------------
NEXT_PUBLIC_ITEMS_PER_PAGE=20
NEXT_PUBLIC_CHART_REFRESH_INTERVAL=30

# ----------------------------------
# Performance
# ----------------------------------
# Disable telemetry in production
NEXT_TELEMETRY_DISABLED=1

# ----------------------------------
# Security
# ----------------------------------
# API timeout (30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Token storage
NEXT_PUBLIC_TOKEN_STORAGE_KEY=dygsom_auth_token
NEXT_PUBLIC_TOKEN_EXPIRY_HOURS=24

# ----------------------------------
# Logging (Production)
# ----------------------------------
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_LOG_LEVEL=warn
NEXT_PUBLIC_LOG_TO_CONSOLE=false

# ----------------------------------
# AWS Region
# ----------------------------------
NEXT_PUBLIC_AWS_REGION=sa-east-1
